<div class="row">
  <div class="col-sm-3 col-12">
    <nav class="nav nav-pills flex-column">
      <% @categories.each do |category| %>
          <%= link_to(category.title, category, class: "nav-link #{'active' if current_page?(category)}" ) %>
      <% end %>
    </nav>
  </div>
  <div class="col-sm-9 col-12">
    <br>
    <% if @records.size > 0 %>
    <%= render 'shared/sort_products' %>
    <div class="row products">
      <%= render @records %>
      <% else %>
      <h2>Not Found</h2>
    </div>
    <% end %>
    <br>
    <div class="nav-bar pagination">
      <% if @pagy.pages > 1 %>
      <%== pagy_bootstrap_nav(@pagy) %>
      <%== pagy_info(@pagy) %>
      <% end %>
    </div>
  </div>
</div>
